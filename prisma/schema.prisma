generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ZohoConfig {
  id             Int       @id @default(autoincrement())
  clientId       String
  clientSecret   String
  refreshToken   String
  accessToken    String?
  tokenExpiresAt DateTime?
  organizationId String
  portalId       String
  environment    String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@map("zoho_config")
} 